{
    "name": "nuon-lsp",
    "displayName": "Nuon LSP",
    "description": "Language Server Protocol support for Nuon TOML configuration files",
    "version": "0.0.3",
    "publisher": "nuon",
    "author": "Nuon",
    "license": "MIT",
    "icon": "icon.png",
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "keywords": [
        "nuon",
        "toml",
        "lsp",
        "language-server",
        "byoc"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nuonco/nuon.git",
        "directory": "bins/lsp/nuon-lsp-vscode"
    },
    "bugs": {
        "url": "https://github.com/nuonco/nuon/issues"
    },
    "homepage": "https://nuon.co",
    "engines": {
        "vscode": "^1.70.0"
    },
    "activationEvents": [
        "onLanguage:toml"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "toml",
                "aliases": [
                    "TOML"
                ],
                "extensions": [
                    ".toml"
                ]
            }
        ],
        "configuration": {
            "title": "Nuon LSP",
            "properties": {
                "nuonLsp.serverPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the Nuon LSP server binary. Leave empty to use the bundled binary."
                },
                "nuonLsp.port": {
                    "type": "number",
                    "default": 0,
                    "description": "TCP port for local development (0 = stdio/binary, 7001 = dev server)"
                }
            }
        }
    },
    "scripts": {
        "build": "yes | vsce package --allow-missing-repository || true",
        "install": "code --install-extension nuon-lsp-0.0.3.vsix --force",
        "vscode:prepublish": "echo 'Prepublish complete'"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@vscode/vsce": "^2.0.0"
    }
}
