{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es6",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "src/build"],
  "exclude": ["./node_modules"]
}
