{
  "name": "@nuon/api-gateway",
  "version": "0.0.0",
  "description": "Nuon's GraphQL API gateway",
  "main": "src/main.ts",
  "scripts": {
    "build": "run-s clean compile-ts copy-gql",
    "clean": "rimraf dist/",
    "compile-ts": "tsc -p tsconfig.build.json",
    "copy-gql": "cp src/gql-schema/*.graphql dist/src/gql-schema/",
    "dev": "nodemon src/main.ts",
    "fmt": "prettier --write src",
    "generate-gql-types": "graphql-codegen --config codegen.ts",
    "lint": "eslint src",
    "start": "node dist/src/main.js",
    "prestart": "npm run build",
    "test": "run-s test:*",
    "test:unit": "jest ./src/",
    "test:integration": "jest ./test/integration/",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "internetz"
  ],
  "author": "Nat Hamilton <nhamilton@powertools.dev>",
  "license": "UNLICENSED",
  "dependencies": {
    "@buf/nuon_apis.grpc_node": "^1.12.4-20230620215022-4204b900f6a5.1",
    "@buf/nuon_components.grpc_node": "^1.12.4-20230517163600-44b1b387bbda.1",
    "@buf/nuon_orgs-api.grpc_node": "^1.12.4-20230622182913-816757ea108f.1",
    "@buf/nuon_shared.grpc_node": "^1.12.4-20230523155643-9fc424bb3775.1",
    "@grpc/grpc-js": "^1.8.17",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.5.0",
    "google-protobuf": "^3.21.2",
    "graphql": "^16.7.1",
    "graphql-yoga": "^4.0.3",
    "install": "^0.13.0",
    "lodash.merge": "^4.6.2",
    "luxon": "^3.3.0",
    "npm": "^9.7.2",
    "pino": "^8.14.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-eslint/eslint-plugin": "^3.20.0",
    "@powertoolsdev/eslint-config-nuon": "^1.0.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/google-protobuf": "^3.15.6",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "eslint-plugin-typescript-sort-keys": "^2.3.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
