{
  "name": "nuon-dashboard-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "npm run generate-api-types",
    "dev": "next dev -p 4000 --turbo",
    "build": "next build",
    "prebuild": "npm run generate-api-types",
    "generate-api-types": "openapi-typescript ${NUON_API_URL:=https://api.nuon.co}/oapi/v3 -o ./src/types/nuon-oapi-v3.d.ts",
    "generate-api-mocks": "msw-auto-mock ${NUON_API_URL:=https://api.nuon.co}/oapi/v3 -o ./test/mock-api-handlers.js -m 5 --node --base-url $NUON_API_URL",
    "start": "next start -p 4000",
    "start-mock-api": "tsx test/mock-express-api.ts",
    "lint": "next lint",
    "fmt": "prettier src",
    "pretest": "npm run generate-api-mocks",
    "test": "vitest run",
    "pretsc": "npm run generate-api-types",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^3.5.0",
    "@datadog/browser-logs": "^5.16.0",
    "@datadog/browser-rum": "^5.16.0",
    "@phosphor-icons/react": "^2.1.7",
    "@segment/analytics-next": "^1.72.2",
    "@tailwindcss/typography": "^0.5.15",
    "@tanstack/react-table": "^8.20.5",
    "@uiw/react-textarea-code-editor": "^3.0.2",
    "@xterm/xterm": "^5.5.0",
    "chart.js": "^4.4.7",
    "classnames": "^2.5.1",
    "cronstrue": "^2.52.0",
    "geist": "^1.3.1",
    "hcl2-json-parser": "^1.0.1",
    "luxon": "^3.4.4",
    "next": "14.2.26",
    "react": "^18",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18",
    "react-error-boundary": "^4.1.2",
    "react-icons": "^5.0.1",
    "react-tailwindcss-select": "^1.8.5",
    "showdown": "^2.1.0",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@mswjs/http-middleware": "^0.10.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.0.1",
    "cors": "^2.8.5",
    "eslint": "^8",
    "eslint-config-next": "14.1.3",
    "eslint-plugin-import": "^2.31.0",
    "express": "^4.21.1",
    "jsdom": "^24.0.0",
    "msw": "^2.3.1",
    "msw-auto-mock": "^0.18.0",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^6.7.6",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.19.3",
    "typescript": "^5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.1.1"
  }
}
