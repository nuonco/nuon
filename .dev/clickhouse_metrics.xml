<yandex>
	<remote_servers>
		<simple>
			<shard>
				<replica>
					<host>clickhouse_0</host>
					<port>9000</port>
				</replica>
			</shard>
			<shard>
				<replica>
					<host>clickhouse_1</host>
					<port>9000</port>
				</replica>
			</shard>
		</simple>
	</remote_servers>
	<zookeeper-servers>
		<node index="1">
			<host>clickhouse_keeper</host>
			<port>2181</port>
		</node>
	</zookeeper-servers>
	<networks>
		<ip>::/0</ip>
	</networks>
	<clickhouse_compression>
		<case>
			<min_part_size>10000000000</min_part_size>
			<min_part_size_ratio>0.01</min_part_size_ratio>
			<method>lz4</method>
		</case>
	</clickhouse_compression>
</yandex>
